{
  "name": "todo-list",
  "displayName": "To-Do List",
  "description": "Simple To-Do List for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:todoListView"
  ],
  "main": "./out/extension.js",
  "icon": "media/iconMain.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoListContainer",
          "title": "To-Do",
          "icon": "media/iconMain.png"
        }
      ]
    },
    "views": {
      "todoListContainer": [
        {
          "id": "todoListView",
          "name": "My Tasks",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@vscode/vsce": "^3.7.1"
  }
}
